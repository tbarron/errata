{
    "manifest_version": 2,

    "name": "Errata",
    "description": "This extension allows you to record corrections for a web page",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Correct the Internet"
    },
    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/"
    ]
}
